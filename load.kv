MDScreen:

    MDBottomNavigation:
        #panel_color: "#eeeaea"
        selected_color_background: "darkgreen"
        text_color_active: "lightgrey"

        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'Items'
            icon: 'basket'
            Image:
                source: "logo.png"
                size_hint: None, None
                width: "80dp"
                height: "80dp"
                pos_hint: {'center_x': .5, 'center_y': .9}
            BoxLayout: 
                orientation: 'vertical'
                MDBoxLayout:
                    padding:2
                    spacing:10
                    size_hint_y:0.4
                   
                    MDTextField:
                        id:inputtodo
                        hint_text:"What do you want to buy"
                        required:True
                        mode:"fill"
                        size_hint_x: 0.6
                    MDRaisedButton:
                        text:"Add"
                        md_bg_color:"darkgreen"
                        on_release:app.addnewtodo(inputtodo.text)

                MDBoxLayout:
                    size_hint_x:0.9
                    MDScrollView:
                        MDList:
                            id:todo_list

			MDFloatingActionButton:
				icon: "logout"
				md_bg_color: "darkgreen"
				pos_hint: {"center_x": .9, "center_y": .1}
				on_release: app.logout_button()

        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'About'
            icon: 'information'

            MDLabel:
                text: 'INFORMATION ABOUT DEVS'
                halign: "center"
                pos_hint: {"center_x": .5, "center_y": .7}
                bold: True
                
            MDLabel:
                text: '  Geraldine T. Cabasa'
                halign: 'center'
                pos_hint: {"center_x": .5, "center_y": .6}
            MDLabel:
                text: 'Mia Anzella D. Alisdan  '
                halign: 'center'
                pos_hint: {"center_x": .5, "center_y": .5}

        MDBottomNavigationItem:
            name: 'screen 3'
            text: 'System Info'
            icon: 'application'

            MDLabel:
                text: 'System Info'
                halign: 'center'
                halign: "center"
                pos_hint: {"center_x": .5, "center_y": .7}
                bold: True
            MDLabel:
                text: 'Grocery Notes is your handy tool for making shopping lists on the go. With easy list management and quick item entry, never forget a grocery item again.'
                halign: 'center'
                pos_hint: {"center_x": .5, "center_y": .6}

        MDBottomNavigationItem:
            name: 'screen 4'
            text: 'System Help'
            icon: 'application-braces-outline'

            MDLabel:
                text: 'System Help'
                halign: 'center'
                halign: "center"
                pos_hint: {"center_x": .5, "center_y": .7}
                bold: True
            MDLabel:
                text: " Need a hand? Check out our Help section for tips on using Grocery Notes efficiently. If you're stuck or have suggestions, drop us a line in the app!"
                halign: 'center'
                pos_hint: {"center_x": .5, "center_y": .6}
